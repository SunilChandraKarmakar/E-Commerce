@using Models;
@model SlideShow;
 
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
    <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Slide Show Info</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form method="post" asp-controller="SlideShow" asp-action="Edit" asp-route-pto="@Model.Photo" enctype="multipart/form-data">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="@Model.Photo">Photo</label>
                        <input type="file" asp-for="@Model.Photo" value="@Model.Photo" class="form-control">
                        <span asp-validation-for="@Model.Photo" class="text-danger"></span>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="@Model.Status"> Status
                            <span asp-validation-for="@Model.Status" class="text-danger"></span>
                        </label>
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Photo</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">                                                           
                <img src="~/@Model.Photo" class="img-responsive" />
            </div><!-- /.box-body -->
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

