@using Models;
@model ICollection<SlideShow>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<section class="content-header">
    <h1>
        Slide Show List
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="myTable" class="table table-bordered table-hover dataTable">
                        <thead>
                            <tr>
                                <th>Photo</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (SlideShow slideShow in Model)
                            {
                                <tr role="row" class="odd">
                                    <td><img src="~/@slideShow.Photo" height="100" width="300" /></td>
                                    <td>@(slideShow.Status == true ? "Show" : "Hide")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@slideShow.Id">Edit</a> |
                                        <a asp-action="Delete" asp-route-id="@slideShow.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Photo</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div>
</section>

