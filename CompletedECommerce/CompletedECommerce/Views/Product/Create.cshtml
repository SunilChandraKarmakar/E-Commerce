@using Models;
@model Product;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Create Product</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form method="post" asp-controller="Product" asp-action="Create">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Name</label>
                        <input type="text" asp-for="@Model.Name" required="required" class="form-control">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CategoryId">Category</label>
                        <select asp-for="@Model.CategoryId" asp-items="@ViewBag.CategoryList" class="form-control">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Price">Price</label>
                        <input type="number" asp-for="@Model.Price" required="required" min="0" class="form-control">
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Quantity">Quantity</label>
                        <input type="number" asp-for="@Model.Quantity" required="required" min="0" class="form-control">
                        <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Details">Product Details</label>
                        <textarea asp-for="@Model.Details" class="form-control" placeholder="Type hare" required="required"></textarea>
                        <span asp-validation-for="@Model.Details" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description">Description</label>
                        <textarea asp-for="@Model.Description" class="form-control" placeholder="Type hare" required="required"></textarea>
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="@Model.Featured"> Featured
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="@Model.Status"> Status
                        </label>
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-info">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>   

