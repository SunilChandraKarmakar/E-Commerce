@using Models;
@model Account;

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-md-6">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Account Information</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form method="post" asp-controller="Account" asp-action="Profile">
            <div class="box-body">
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.Id" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Username">Username</label>
                    <input type="text" asp-for="@Model.Username" value="@Model.Username" class="form-control">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.FullName">Full Name</label>
                    <input type="text" asp-for="@Model.FullName" value="@Model.FullName" class="form-control">
                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email Address</label>
                    <input type="email" asp-for="@Model.Email" value="@Model.Email" class="form-control">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password">Password</label>
                    <input type="password" asp-for="@Model.Password" value="@Model.Password" class="form-control">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                    <input type="password" asp-for="@Model.ConfirmPassword" value="@Model.Password" class="form-control">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                @if (Model.Status != true)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="@Model.Status"> Status
                        </label>
                    </div>
                }
                else
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="@Model.Status" value="@Model.Status" checked="checked"> Status
                        </label>
                    </div>
                }
            </div><!-- /.box-body -->

            <div class="box-footer">
                <input type="submit" class="btn btn-primary" name="Update" />
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

