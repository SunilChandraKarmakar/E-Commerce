@using Models;
@model Account;

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-md-6">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Account Information</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form method="post" asp-controller="Account" asp-action="Profile">
            <div class="box-body">
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.Id" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Username">Username</label>
                    <input type="text" asp-for="@Model.Username" value="@Model.Username" class="form-control">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.FullName">Full Name</label>
                    <input type="text" asp-for="@Model.FullName" value="@Model.FullName" class="form-control">
                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email Address</label>
                    <input type="email" asp-for="@Model.Email" value="@Model.Email" class="form-control">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Phone">Phone</label>
                    <input type="number" asp-for="@Model.Phone" value="@Model.Phone" class="form-control">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password">Password</label>
                    <input type="password" asp-for="@Model.Password" value="@Model.Password" class="form-control">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                    <input type="password" asp-for="@Model.ConfirmPassword" value="@Model.Password" class="form-control">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Address">Address</label>
                    <textarea asp-for="@Model.Address" class="form-control">@Model.Address</textarea>
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" asp-for="@Model.Status"> Status
                    </label>
                </div>

            </div><!-- /.box-body -->

            <div class="box-footer">
                <input type="submit" class="btn btn-primary" name="Update" />
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

