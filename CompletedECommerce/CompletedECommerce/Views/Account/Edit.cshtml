@using Models;
@model Account;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Edit Customer</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form method="post" asp-controller="Account" asp-action="Edit">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="@Model.Username">User name</label>
                        <input type="text" asp-for="@Model.Username" readonly="readonly" class="form-control">
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>                     
                    <div class="form-group">
                        <label asp-for="@Model.FullName">Full Name</label>
                        <input type="text" asp-for="@Model.FullName" readonly="readonly" class="form-control">
                        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email">Email</label>
                        <input type="email" asp-for="@Model.Email" readonly="readonly" class="form-control">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password">Password</label>
                        <input type="password" asp-for="@Model.Password" value="@Model.Password" class="form-control" readonly="readonly"/>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                        <input type="password" asp-for="@Model.ConfirmPassword" value="@Model.Password" class="form-control" readonly="readonly" />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" asp-for="@Model.Status"> Status
                        </label>
                    </div>
                </div><!-- /.box-body -->

                <div class="box-footer">
                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-info">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>

