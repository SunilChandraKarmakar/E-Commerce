@using Models;
@model ICollection<InvoiceDetails>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ClinteLayout.cshtml";
}

<ul class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a> <span class="divider">/</span></li>
    <li class="active">Invoice History</li>
</ul>

<section class="content-header" style="margin-bottom: 30px">
    <h1>
        Invoice Details
    </h1>
</section>

<table id="myTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (InvoiceDetails invoiceDetails in Model)
        {
            <tr>
                <td>@invoiceDetails.Product.Name</td>
                <td>@invoiceDetails.Price</td>
                <td>@invoiceDetails.Quantity</td>
                <td>@(invoiceDetails.Quantity * invoiceDetails.Price)</td>
            </tr>
        }
    </tbody>
</table>

