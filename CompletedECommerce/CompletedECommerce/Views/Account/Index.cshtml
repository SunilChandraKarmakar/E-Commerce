@using Models;
@model ICollection<RoleAccount>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="content-header">
    <h1>
        Account List
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="myTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>User Name</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (RoleAccount roleAccount in Model)
                            {
                                <tr>
                                    <td>@roleAccount.Id</td>
                                    <td>@roleAccount.Account.Username</td>
                                    <td>@roleAccount.Account.FullName</td>
                                    <td>@roleAccount.Account.Email</td>
                                    <td>@(roleAccount.Account.Status == true ? "Active" : "InActive")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@roleAccount.Id" class="btn btn-info">Edit</a> |
                                        <a asp-action="Delete" asp-route-id="@roleAccount.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>             
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>User Name</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div>
</section>

