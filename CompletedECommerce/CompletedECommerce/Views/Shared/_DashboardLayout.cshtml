                            <li><a asp-controller="SlideShow" asp-action="Index"><i class="fa fa-circle-o"></i> List</a></li>
                            <li><a asp-controller="SlideShow" asp-action="Add"><i class="fa fa-circle-o"></i> Add</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
