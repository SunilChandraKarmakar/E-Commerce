                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-folder"></i> <span>Accounts</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="Account" asp-action="Index"><i class="fa fa-circle-o"></i> List</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-folder"></i> <span>Invoice Management</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-controller="InvoiceManagement" asp-action="Index"><i class="fa fa-circle-o"></i> List</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
