@using Models;
@model IEnumerable<Category>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="content-header">
    <h1>
        Category List
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="myTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Parent Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td><b>@category.Name</b></td>
                                    <td>@(category.Categorye == null ? " " : category.Categorye.Name)</td>
                                    <td>@(category.Status == true ? "Show" : "Hide")</td>
                                    <td>
                                        <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-info">Edit</a> |
                                        <a asp-action="DeleteCategory" asp-route-id="@category.Id" onclick="return confirm('Are you sure?')">@(category.Categorye == null & category.Categories.Count() > 0 ? "" : "Delete | ")</a>
                                        <a asp-controller="Category" asp-action="AddSubCategory" class="btn btn-success" asp-route-id="@category.Id">Add Sub Category</a>
                                    </td>
                                </tr>
                                @foreach (Category subCategory in category.Categories)
                                {
                                    <tr role="row" class="odd">
                                        <td>@subCategory.Id</td>
                                        <td>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; @subCategory.Name</td>
                                        <td>@subCategory.Categorye.Name</td>
                                        <td>@(subCategory.Status == true ? "Show" : "Hide")</td>
                                        <td>
                                            <a asp-action="EditCategory" asp-route-id="@subCategory.Id" class="btn btn-info">Edit</a> |
                                            <a asp-action="DeleteCategory" asp-route-id="@subCategory.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Parent Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div>
</section>




