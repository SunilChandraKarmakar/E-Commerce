@using Models;
@model Category;

@{
    ViewData["Title"] = "AddSubCategory";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="content-header">
    <h1>
        Add Sub Category
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Sub Category Info</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form method="post" asp-controller="Category" asp-action="AddSubCategory">
                    <div class="box-body">
                        <div class="form-group"> 
                            <label asp-for="@Model.Name">Category Name</label>
                            <input type="text" asp-for="@Model.Name" class="form-control" required="required" readonly="readonly">
                        </div>
                        <div class="form-group">
                            <label for="subCategory">Sub Category Name</label>
                            <input type="text" id="subCategory" name="subCategory" class="form-control" required="required">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="@Model.Status"> Status
                            </label>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <span class="text-danger">@ViewBag.ErrorMessage</span>
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </div>
                </form>
            </div><!-- /.box -->
            <!-- Form Element sizes -->
        </div>
    </div>
</section>

