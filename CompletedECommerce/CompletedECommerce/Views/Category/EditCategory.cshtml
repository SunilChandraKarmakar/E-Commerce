@using Models;
@model Category;
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="content-header">
    <h1>
        Edit Category
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Category Info</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form method="post" asp-controller="Category" asp-action="EditCategory">
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="@Model.Name">Category Name</label>
                            <input type="text" asp-for="@Model.Name" value="@Model.Name" class="form-control" required="required">
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="@Model.CategoryId" value="@Model.CategoryId" class="form-control" required="required">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="@Model.Status"> Status
                            </label>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <span class="text-danger">@ViewBag.ErrorMessage</span>
                        <input type="submit" class="btn btn-primary" value="Update" />
                        <a asp-controller="Category" asp-action="Index" class="btn btn-info">Back To List</a>
                    </div>
                </form>
            </div><!-- /.box -->
            <!-- Form Element sizes -->
        </div>
    </div>
</section>


