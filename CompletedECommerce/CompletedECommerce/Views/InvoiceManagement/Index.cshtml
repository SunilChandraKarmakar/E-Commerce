@using Models;
@model ICollection<Invoice>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<section class="content-header">
    <h1>
        Invoice List
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="myTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Invoice customerInvoice in Model)
                            {
                                <tr>
                                    <td>@customerInvoice.Name</td>
                                    <td>@customerInvoice.Date</td>
                                    <td>@(customerInvoice.Status == false ? "Panding" : "Done")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@customerInvoice.Id" class="btn btn-info">Details</a> 
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div>
</section>

